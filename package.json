{
  "name": "daskeyboard-applet--pomodoro-max",
  "displayName": "Pomodoro Max",
  "version": "1.0.1",
  "description": "A Pomodoro timer for your Das Keyboard Q.",
  "longDescription": "Turns a bar of 10 keys on your Das Keyboard Q into a dynamic countdown timer, visually tracking work and break sessions through color changes.",
  "officialProductName": "Pomodoro Max",
  "appUrl": "",
  "isSingleton": true,
  "videoUrl": "",
  "icon": "assets/icon.png",
  "image": "assets/image.png",
  "publisher": "Lieven Vandeperre",
  "authorName": "Lieven Vandeperre",
  "authorUrl": "https://github.com/LievenVandeperre",
  "issuesUrl": "https://github.com/daskeyboard/daskeyboard-applet--pomodoro-max/issues",
  "homePageUrl": "https://github.com/daskeyboard/daskeyboard-applet--pomodoro-max",
  "developerRepoUrl": "https://github.com/daskeyboard/daskeyboard-applet--pomodoro-max",
  "licenseUrl": "http://www.gnu.org/licenses/old-licenses/gpl-2.0.txt",
  "changelogUrl": "CHANGELOG.md",
  "license": "MIT",
  "readMeUrl": "README.md",
  "readMeEndUserUrl": "README_ENDUSER.md",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest",
    "dev": "node index.js dev '{\"applet\":{\"user\":{\"pom_time\":\"4\",\"pom_color\":\"#00FF00\",\"break_time\":\"1\",\"break_color\":\"#FF9600\"}},\"geometry\":{\"width\":10,\"height\":1,\"origin\":{\"x\":2,\"y\":1}}}'"
  },
  "engines": {
    "das-keyboard-q": "4.2.1"
  },
  "dependencies": {
    "daskeyboard-applet": "^2.11.5",
    "jest": "^30.0.5",
    "sound-play": "^1.1.0"
  },
  "qConfig": {
    "geometry": {
      "width": 10,
      "height": 1,
      "defaults": {
        "origin": {
          "x": 2,
          "y": 1
        }
      }
    },
    "questions": [
      {
        "key": "pom_time",
        "label": "How many minutes for the pomodoro?",
        "help": "This is how long the pomodoro will last",
        "required": true,
        "order": 1,
        "value": "50",
        "controlType": "textbox"
      },
      {
        "key": "break_time",
        "label": "How many minutes for the break?",
        "help": "This is how long your break will last",
        "required": true,
        "order": 2,
        "value": "10",
        "controlType": "textbox"
      },
      {
        "key": "pom_color",
        "label": "Choose what color should be used to represent the (filling) pomodoro",
        "help": "This color will be used to show the pomodoro time filling up",
        "required": true,
        "order": 1,
        "value": "#00FF00",
        "controlType": "color"
      },
      {
        "key": "break_color",
        "label": "Choose what color should be used to represent the (filling) break",
        "help": "This color will be used to show the break time counting down",
        "required": true,
        "order": 2,
        "value": "#FF0000",
        "controlType": "color"
      }
    ],
    "applet": {
      "defaults": {}
    }
  }
}
